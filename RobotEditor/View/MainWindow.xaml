<Window x:Class="RobotEditor.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:RobotEditor.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModel:MainWindowViewModel, IsDesignTimeCreatable=false}"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button_CreateRobot" Content="Add Robot" HorizontalAlignment="Left" Margin="269,257,0,0" VerticalAlignment="Top" Width="100" Command="{Binding Path=AddRobot}"/>
        <Button x:Name="button_deleteRobot" Content="Delete Robot" HorizontalAlignment="Left" Margin="397,257,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Path=DeleteRobot}"/>
        <DataGrid x:Name="Robots_Grid" HorizontalAlignment="Left" Height="174" Margin="269,10,0,0" VerticalAlignment="Top" Width="203" ItemsSource="{Binding Path=Robots}" AutoGenerateColumns="False"
                  SelectedItem="{Binding Path=SelectedRobot}" SelectionMode="Single" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Robot" Width="200" Binding="{Binding Path=Name, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
